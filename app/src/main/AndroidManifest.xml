<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beatmakingapp"
    android:largeHeap="true">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity android:name="com.example.beato.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.beato.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:clearTaskOnLaunch="true" >
        </activity>

        <activity android:name="com.example.beato.TrackActivity"
            android:screenOrientation="landscape"
            android:clearTaskOnLaunch="true" />
        <activity android:name="com.example.beato.PatternActivity"
            android:screenOrientation="landscape"
            android:clearTaskOnLaunch="true" />
    </application>

</manifest>